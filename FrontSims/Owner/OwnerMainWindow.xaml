<Window x:Class="FrontSims.OwnerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontSims"
        mc:Ignorable="d"
        Title="OwnerMainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Owner" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Button Content="Show All Hotels" Click="OpenHotelButton_Click" HorizontalAlignment="Left" Margin="0 10 10 0" VerticalAlignment="Top" />
        <Button Content="Show your Hotels" Click="OpenOwnerHotelButton_Click" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" />
        <Button Content="Add Apartment" Click="AddApartment_Click" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.143,0.603" />
        <Button Content="Show Reservations" Click="ShowReservations_Click" HorizontalAlignment="Left" Margin="332,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.668,0.536" />
        <Button Content="Approve Hotels" Click="ApproveHotels_Click" HorizontalAlignment="Left" Margin="462,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.668,0.536" />
    </Grid>
</Window>
