<Window x:Class="FrontSims.Guest.ScheduleReservationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontSims.Guest"
        mc:Ignorable="d"
        Title="ScheduleReservationPage" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select Reservation Date:" FontWeight="Bold"/>
            <DatePicker x:Name="datePicker" Width="200" Margin="0,5"/>

            <Button Content="Confirm Reservation" Click="ConfirmReservation_Click" HorizontalAlignment="Center" Width="150" Margin="0,20"/>
            <Button Content="Go Back" Click="GoBackButton_Click" HorizontalAlignment="Center" Width="150" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>
