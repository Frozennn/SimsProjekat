<Window x:Class="FrontSims.GuestMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontSims"
        mc:Ignorable="d"
        Title="GuestMainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Guest" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        
        <Button Content="Show Hotels" Click="OpenHotelButton_Click" HorizontalAlignment="Left" Margin="0 10 10 0" VerticalAlignment="Top" />
        <Button Content="Reserve Apartment" Click="ApartmentReservation_Click" HorizontalAlignment="Left" Margin="95,10,0,0" VerticalAlignment="Top" />
        <Button Content="Show All Reservations" Click="ShowAllReservations_Click" HorizontalAlignment="Left" Margin="219,10,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
