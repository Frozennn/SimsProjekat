<Window x:Class="FrontSims.AdministratorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontSims"
        mc:Ignorable="d"
        Title="AdministratorMainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Administrator" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Button Content="Show Hotels" Click="OpenHotelButton_Click" HorizontalAlignment="Left" Margin="0 10 10 0" VerticalAlignment="Top" />
        <Button Content="Register new User" Click="OpenRegistrationPage_Click" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.599,0.749" />
        <Button Content="Show All Users" Click="OpenShowAllUsersPage_Click" HorizontalAlignment="Left" Margin="206,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.599,0.749" />
        <Button Content="Add Hotel" Click="OpenAddHotelPage_Click" HorizontalAlignment="Left" Margin="306,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.599,0.749" />
        
    </Grid>
</Window>
